<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="@color/mainGreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/venueTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wafaaa2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/venuePhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01121444875"
                android:textAppearance="@style/Base.CardView"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/venueStreet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="mahdy"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/venueArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nasr City"
                android:textColor="@color/white"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>